
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<h4 class="text-danger"> @TempData["unf"] </h4>

<form method="post" class="">
    <input type="text" name="Id" value="User Id: @Model.Id" disabled class="form-control text-center" />
    <input type="text" name="Name" value="@Model.Name" placeholder="Name" class="form-control mt-2" />
    <small class="text-danger"> @Html.ValidationMessage("Name") </small>
    <input type="text" name="Cgpa" value="@Model.Cgpa" placeholder="CGPA" class="form-control mt-2" />
    <small class="text-danger"> @Html.ValidationMessage("Cgpa") </small> <br />

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Preview Changes
    </button>
    <a href="/Student/AllStudents" class="btn btn-outline-secondary">Back</a>
    @*<input type="submit" value="Update" class="btn btn-outline-primary" />*@

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Do You Want to Chnge?</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Name: @Model.Name </p>
                    <p>Cgpa: @Model.Cgpa </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>

